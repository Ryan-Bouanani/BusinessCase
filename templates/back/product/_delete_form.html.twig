<form method="post" action="{{ path('app_product_delete', {'slug': product.slug}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce produit ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="button btnAction">Supprimer</button>
</form>
