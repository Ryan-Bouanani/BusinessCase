{% extends 'front/base.html.twig' %}

{% block title %} product[0].title{% endblock %}

{% block body %}

 <section class="container-me">

    <div class="topProduct">
        <div class="imagesProduct">
            <div class="imagesSecondary">
                {% for image in product[0].images %}              
                    <img src="{{ asset("build/images/" ~ image.path) }}" alt="{{ product[0].title }}">
                {% endfor %}
            </div>
            <div class="imageMain">
                {% for image in product[0].images %}
                    {% if image.isMain == true %}                 
                        <img src="{{ asset("build/images/" ~ image.path) }}" alt="{{ product[0].title }}">

                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="productInfo">
            <div class="starsAndReviews">
                <div class="stars">
                    {{ product['Note'] | stars }}
                </div>
                <p class="p-1 nbReview">({{ product['Avis'] }} avis)</p>
            </div>
            <div class="productTitleAndBrandLabel">
                <h1 class="title-product">{{ product[0].title }}</h1>
                <p>{{ product[0].brand.label }}</p>
            </div>
            
            {% set priceTaxIncl = product[0].priceExclVat |priceTaxIncl( product[0].tva) %}

            {% if product[0].promotion %}

                <div class="priceProduct">
                    <p class="price priceInline">{{product[0].priceExclVat | priceTaxIncl( product[0].tva, product[0].promotion.percentage) }}€</p> 
                    <del>{{ priceTaxIncl }}€</del>
                </div>

            {% else %}
                <p class="price">{{ priceTaxIncl }}€</p>
            {% endif %}

            <a href=" {{ path('app_shoppingCart_add', {id: product[0].id} )}}" class="btn btnAddBasket">Ajoutez au panier</a>
        </div>
    </div>
    <div class="descriptionContainer">
        <h2>Description</h2>
        <p class="productDescription">{{ product[0].description }}</p>
    </div>
 </section>

{% endblock %}
