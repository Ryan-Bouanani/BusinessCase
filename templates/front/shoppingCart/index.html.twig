{% extends 'front/base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<section class="container-me" id="shoppingCartSection">
    {% if items | length > 0 %}

    <h1>Mon Panier</h1>

        {% set contentCheckout %}  
            {% include "front/partials/_contentShoppingCart.html.twig" with {
                quantity: true,
                delete: true,
            } %}       
        {% endset %} 

        {% include "front/partials/_shoppingCart.html.twig" with {
            contentCheckout: contentCheckout,
            btnContent: 'COMMANDER',
            btn: false,
        } %}
    </div>
        
    {% else %}
        <p class="basketShoppingCart">Panier vide</p>
        
    {% endif %}
</section>

{% endblock %}
