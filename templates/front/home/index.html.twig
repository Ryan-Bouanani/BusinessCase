{% extends 'front/base.html.twig' %}

{% block title %}La Nîmes'alerie{% endblock %}

{% block body %}
    <!-- Barre de nav -->
    <header>
        <span class="boneWhite b1"></span>
        <span class="boneWhite b2"></span>
        <span class="boneWhite b3"></span>
        <span class="boneWhite b4"></span>
        <span class="bone b5"></span>
        <span class="bone b6"></span>
        <span class="bone b7"></span>
        <span class="paw paw1"></span>
        <span class="paw paw2"></span>
        <span class="paw paw3"></span>
        <span class="paw paw4"></span>

        <div class="top-nav">
            <div class="search-menu-mobile">
                <div class="menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>

                <div class="search-submit" type="submit" value=""></div>
            </div>
            <img id="logo" src="{{ asset("build/images/la-Nîmes'alerie-logos.png") }}" alt="Logo La Nîmes'Alerie">
            <form class="search-form" action="#" method="">
                <input class="search-bar" type="search" placeholder="Rechercher un produit">
                <input class="search-submit" type="submit" value="">
            </form>
            <div class="account_basket">
                <div class="account-p">
                    <a href="#"><div class="account"></div></a>
                    <p class="none">Connexion</p>
                </div>
                <div class="basket-p">
                    <a href="#"><div class="basket"></div><span class="count">0</span></a>
                    <p class="none">Mon panier</p>
                </div>
            </div>
        </div>
        <nav class="bottom-nav">
            <div class="category top-nav-mobile">
                <div class="linkCategory">
                    <a href="#">Accueil</a>
                    <i class="fa-solid fa-xmark close"></i>
                </div>
            </div>
            <ul class="listCategories">
                {% for category in categoriesParent %}
                    
                <li class="category">
                    <div class="linkCategory">
                        <a href="#">{{ category.name }}</a>
                        <i class="fa-solid fa-chevron-right"></i>
                    </div>
                    <ul class="sub-menu">
                        {% for subCategory in category.categoryChildren %}
                            <li><a href="#">{{ subCategory.name }}</a></li>      
                        {% endfor %}
                    </ul>
                </li>
                {% endfor %}
            </ul>
            <ul class="social-networks">
                <li>
                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                </li>
            </ul>
        </nav>
        <!-- Home -->
        <!-- <div class="bg_paw"> -->
            <div class="container1">
                <div class="left">
                    <h1>La Nîmes'alerie</h1>
                    <p>Le bien être pour tous</p>
                    <a href="#" class="btn btn-dark">Visiter notre site</a>
                </div>
                <div class="right none">
                    <div class="cat-dog"></div>
                </div>
            </div>
        <!-- </div> -->
    </header>
    <main>

        <!-- Nouveautés -->
        <section id="new-products" class="container-me">
                <h2 class="h2">Nouveautés</h2>
                <div class="carrouselContainer">
                    <span class="arrow_left"></span>
                    <span class="arrow_right"></span>
                    <div class="carrousel carrouselProducts">
                        {% for product in newProducts %}
                            <div class="card">
                            <a href="{{ path('app_detail_product', {'slug': product[0].title}) }}">
                            
                                {% for image in product[0].images %}
                                    <img src="{{ asset("build/images/" ~ image.path) }}" alt="Pédigree">
                                {% endfor %}
                                <h3 class="title-product">{{ product[0].title }}</h3>
                                {# <span class="new">NOUVEAU</span> #}
                                {% if product['percentage'] %}
                                    <span class="new">{{ product['percentage']|  percentagePromo }}</span>
                                {% endif %}
                                    <div class="stars-reviews">
                                    <div class="stars">
                                    {{ product['note'] | stars }}
                                    </div>
                                    <p class="p-1">({{ product['Avis'] }} avis)</p>
                                </div>

                                  {% set priceTaxIncl = product[0].priceExclVat +  (product[0].priceExclVat * (product[0].tva / 100)) | round(2,'floor') %}

                                  {% if product['percentage'] %}
                                    <p class="price priceInline">{{ priceTaxIncl -  (priceTaxIncl * (product['percentage'] / 100)) | round(2,'floor') }}€</p>
                                    <del>{{ priceTaxIncl }}€</del>
                                {% else %}
                                    <p class="price">{{ priceTaxIncl}}€</p>
                                {% endif %}
                                <a href="" class="btn btnAddBasket">Ajoutez au panier</a>
                            </a>
                            </div>            
                        {% endfor %}
                    </div>
                </div>
                <a href="#" class="btn btn-dark">Tout voir</a>
            </div>
        </section>

        <!-- Brand cover -->
        <section class="container-me" id="brandtCover">
            <div class="brandt-big-cover">
                <img class="hills-big-brandt" src="{{ asset("build/images/hills-brand-big.jpg") }}" alt="">
                <img class="wolf-big-brandt" src="{{ asset("build/images/wolf-brand-big.jpg") }}" alt="">
            </div>
        </section>

        <!--  Nos Meileurs Ventes -->

        <!-- Marques populaires -->

        <!--  Nos Meileurs Ventes -->
        <section id="best-sales">
            <div class="container-me">
                <h2 class="h2">Les mieux notés</h2>
                <div class="carrouselContainer">
                    <!-- <span class="arrow_left"></span>
                    <span class="arrow_right"></span> -->
                    <i class="arrow_left fa-solid fa-circle-chevron-left"></i>
                    <i class="arrow_right fa-solid fa-circle-chevron-right"></i>
                    <div class="carrousel carrouselProducts">       
                          {% for product in topRatedProducts %}
                            <div class="card">
                            <a href="{{ path('app_detail_product', {'slug': product[0].title}) }}">
                            
                                {% for image in product[0].images %}
                                    <img src="{{ asset("build/images/" ~ image.path) }}" alt="{{ product[0].title }}">
                                {% endfor %}
                                <h3 class="title-product">{{ product[0].title }}</h3>
                                {# <span class="new">NEW</span> #}
                                {% if product['percentage'] %}
                                    <span class="new">{{ product['percentage'] | percentagePromo }}</span>
                                {% endif %}
                                
                                    <div class="stars-reviews">
                                    <div class="stars">
                                    {{ product['Avis'] | stars }}
                                    </div>
                                    <p class="p-1">({{ product['Avis'] }} avis)</p>
                                </div>

                                  {% set priceTaxIncl = product[0].priceExclVat +  (product[0].priceExclVat * (product[0].tva / 100)) | round(2,'floor') %}

                                {% if product['percentage'] %}
                                    <p class="price priceInline">{{ priceTaxIncl -  (priceTaxIncl * (product['percentage'] / 100)) | round(2,'floor') }}€</p>
                                    <del>{{ priceTaxIncl }}€</del>
                                {% else %}
                                    <p class="price">{{ priceTaxIncl}}€</p>
                                {% endif %}
                                <a href="" class="btn btnAddBasket">Ajoutez au panier</a>
                            </a>
                            </div>            
                        {% endfor %}

                    </div>
                </div>
                <a href="#" class="btn btn-dark">Tout voir</a>
            </div>
        </section>


        <section id="bestBrandts" class="container-me">
            <div class="bestBrandtsCarrousel">
                <h2 class="h2">Marques populaires</h2>
                <div class="carrouselContainer">
                    <span class="arrow_left"></span>
                    <span class="arrow_right"></span>
                    <div class="carrousel carrouselBrandts">
                      {% for brand in brandts %}
                        <img src="{{ asset("build/images/" ~ brand.pathImage) }}" alt="{{ brand.label }}">
                      {% endfor %}
                    </div>
                </div>
            </div>
            <div class="dogContainer">
                <div class="dog"></div>
            </div>
        </section>

        <section id="blog" class="container-me">
            <h2>Blog</h2>
            <div class="containerBlog">
                <div class="article-blog">
                    <div class="image-date">
                        <img src="{{ asset("build/images/blog-1.png") }}" alt="Photo article Apprenez à comprendre votre chien">
                        <span class="date-article"><span>1</span>Avril</span>
                    </div>
                    <h3>Apprenez à comprendre votre chien</h3>
                </div>
                <div class="article-blog">
                     <div class="image-date">
                        <img src="{{ asset("build/images/blog-2.png") }}" alt="Photo article Apprenez à comprendre votre chien">
                        <span class="date-article"><span>11</span>Decembre</span>
                    </div>
                    <h3>Comment bien nourrir votre animal de compagnie</h3>
                </div>
                <div class="article-blog">
                    <div class="image-date">
                        <img src="{{ asset("build/images/blog-3.png") }}" alt="Photo article Apprenez à comprendre votre chien">
                        <div class="date-article"><span>27</span>Mai</div>
                    </div>
                    <h3>Les aliments naucif pour votre lapin de compagnie</h3>
                </div>
            </div>
            <a href="" class="btn">Voir plus</a>
        </section>

        <!-- Avis clients -->
        <section id="testimonials">
            <h2 class="h2testimonials">Avis clients</h2>
            <div class="testimonialsNewletter">
                <div class="testimonials-slider">
                <div class="testimonialContainer">
                    <span class="arrow_left"></span>
                    <span class="arrow_right"></span>
                    {% for review in reviews %}
                    {# data-index='{{ loop.index }}' #}
                        <div class="testimonial-item">
                            <div class="testimonials">
                                <span class="guillemet">❝</span>
                                <p>{{ review.comment }}</p>
                                <div class="profil">
                                    <img src="{{ asset("build/images/photo de profil avis 1.png") }}" alt="Photo de profil">
                                    <h3>{{ review.customer.firstName }} {{ review.customer.lastName }}</h3>
                                </div>
                            </div>                
                        </div>
                    {% endfor %}
                    {# <div class="testimonials none">
                        <span class="guillemet">❝</span>
                        <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Dolor ipsum laboriosam, sed asperiores</p>
                        <div class="profil">
                            <img src="{{ asset("build/images/photo de profil avis 1.png") }}" alt="Photo de profil">
                            <h3>Julien Fallois</h3>
                        </div>
                    </div> #}
                </div>
                </div>
                <div class="newletter">
                    <h2 class="h2Newletter">Abonnez-vous à notre newletter</h2>
                    <p class="pNewletter">ET beneficiez de -10% sur votre prochaine commande</p>
                    <form action="#">
                        <input class="mailNewletter" type="text" value="" placeholder="Entrer votre email" />
                        <input class="btn-dark btnSubmitNewletter" type="submit" value="S'ABONNER">
                    </form>
                </div>
            </div>
        </section>

        <!-- A propos de nous -->
        <section id="about" class="container-me">
                <div class="left_about">
                    <h2 class="h2">A propos de nous</h2>
                    <p>L’animalerie vous propose plus de 1000 références en alimentation, nourritures, produits et
                        accéssoires
                        pour animaux. Notre catalogue offres tout les produits et accessoires pour chiens, chats,
                        rongueurs,
                        poissons, reptiles, furets, cheveaux et même pour les animaux de ferme ou d’élevage.</p>
                    <a href="#" class="btn">En savoir plus</a>
                </div>
                <div class="right_cat">
                    <div class="cat"></div>
                </div>
        </section>

        <!-- Réassurances -->
        <section id="reinsurance" class="">
            <div class="reassuranceBlob">
                <div class="delivery"></div>
                <p>Livraison en 48H</p>
            </div>
            <div class="reassuranceBlob">
                <div class="securePayment"></div>
                <p>Paiement sécurisé</p>
            </div>
            <div class="reassuranceBlob">
                <div class="customerService"></div>
