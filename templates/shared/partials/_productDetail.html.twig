
<div class="topProduct">
    <div class="imagesProduct">
        <div class="imagesSecondary">
            {% for image in product.images %}              
                <img src="{{ asset("build/images/" ~ image.path) }}" alt="{{ product.name }}">
            {% endfor %}
        </div>
        <div class="imageMain">
            {% for image in product.images %}
                {% if image.isMain == true %}                 
                    <img src="{{ asset("build/images/" ~ image.path) }}" alt="{{ product.name }}">

                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="productInfo">
        <div class="starsAndReviews">
            <div class="stars">
                {{ product['Note'] | stars }}
            </div>
            <p class="p-1 nbReview">({{ product['Avis'] }} avis)</p>
        </div>
        <h1 class="title-product">{{ product.name }}</h1>
        
        {% set priceTaxInclWithoutPromo = product | priceTaxIncl(false) %}
        {% set priceTaxAndPromoIncl = product | priceTaxIncl %}
        {% if product.promotion %}

            <div class="priceProduct">
                <p class="price priceInline">{{ priceTaxAndPromoIncl }}€</p> 
                <del>{{ priceTaxInclWithoutPromo }}€</del>
            </div>

        {% else %}
            <p class="price">{{ priceTaxInclWithoutPromo }}€</p>
        {% endif %}

        <input type="number" placeholder="Entrer une quantité" value="1">

        <a href=" {{ path('app_shoppingCart_add', {id: product.id} )}}" class="btn btnAddBasket">Ajouter au panier</a>
    </div>
</div>
<div class="descriptionContainer">
    <h2>Description</h2>
    <p class="productDescription">{{ product.description }}</p>
</div>


