{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <h1>Product</h1>

    <table class="table">
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.priceExclVat }}</td>
                    <td>{{ product.priceVat }}</td>
                    <td>{{ product.active ? 'Yes' : 'No' }}</td>
                    <td>{{ product.dateAdded ? product.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

      <div class="navigation d-flex justify-content-center mt-2">
            {{ knp_pagination_render(products) }}
        </div>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
